<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp25"
            android:theme="@style/AppTheme"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/sp18"
                android:layout_height="@dimen/sp18"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/sp15"
                android:src="@drawable/ic_close"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp15"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/sp15"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/sp15"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_menu_profileImg"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:padding="@dimen/dp5"
                            android:src="@drawable/ic_account_icon_with_border"
                            app:civ_border_color="@color/color_000000"
                            app:civ_border_overlay="true"
                            app:civ_border_width="5dp"
                            app:civ_fill_color="@color/color_000000" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_profile_add_button" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_welcome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/segoeui"
                            android:text="@string/_welcomeToEnglandGuide"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/tv_menu_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeuib"
                            android:text="Jhon Doe"
                            android:textColor="@color/color_012169"
                            android:textSize="@dimen/dp20"
                            tools:ignore="SpUsage" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp5"
                    android:background="@color/color_7d012169" />

                <TextView
                    android:id="@+id/tv_menu_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_home"
                    android:drawableLeft="@drawable/ic_home"
                    android:drawablePadding="@dimen/dp10"
                    android:fontFamily="@font/segoeuib"
                    android:padding="@dimen/sp15"
                    android:text="@string/_home"
                    android:textColor="@color/color_012169"
                    android:textSize="@dimen/sp18" />

                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/color_7d012169" />-->

                <TextView
                    android:id="@+id/tv_menu_travel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_travel"
                    android:drawableLeft="@drawable/ic_travel"
                    android:drawablePadding="@dimen/dp10"
                    android:fontFamily="@font/segoeuib"
                    android:padding="@dimen/sp15"
                    android:paddingStart="@dimen/dp15"
                    android:paddingLeft="@dimen/dp15"
                    android:text="@string/_travel"
                    android:textColor="@color/color_012169"
                    android:textSize="@dimen/sp18"
                    tools:ignore="RtlSymmetry" />

                <!-- <View
                     android:layout_width="match_parent"
                     android:layout_height="0.5dp"
                     android:background="@color/color_7d012169" />
     -->
                <TextView
                    android:id="@+id/tv_menu_traffic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@drawable/ic_traffic_light"
                    android:drawablePadding="@dimen/dp15"
                    android:fontFamily="@font/segoeuib"
                    android:padding="@dimen/sp15"
                    android:text="@string/_trafficSignals"
                    android:textColor="@color/color_012169"
                    android:textSize="@dimen/sp18" />

                <!-- <View
                     android:layout_width="match_parent"
                     android:layout_height="0.5dp"
                     android:background="@color/color_7d012169" />
     -->
                <TextView
                    android:id="@+id/tv_menu_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_currency_guide_"
                    android:drawablePadding="@dimen/dp10"
                    android:fontFamily="@font/segoeuib"
                    android:padding="@dimen/sp15"
                    android:text="@string/_currency"
                    android:textColor="@color/color_012169"
                    android:textSize="@dimen/sp18" />

                <!--  <View
                      android:layout_width="match_parent"
                      android:layout_height="0.1dp"
                      android:background="@color/color_4D1a1a1a" />
      -->
                <TextView
                    android:id="@+id/tv_menu_bins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_waste_management"
                    android:drawablePadding="@dimen/dp12"
                    android:fontFamily="@font/segoeuib"
                    android:padding="@dimen/sp15"
                    android:text="@string/_wasteManage"
                    android:textColor="@color/color_012169"
                    android:textSize="@dimen/sp18" />

                <!--    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_7d012169" />
        -->
                <TextView
                    android:id="@+id/tv_menu_groceryShops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_grocery"
                    android:drawablePadding="@dimen/dp10"
                    android:fontFamily="@font/segoeuib"
                    android:padding="@dimen/sp15"
                    android:text="@string/_nhs"
                    android:textColor="@color/color_012169"
                    android:textSize="@dimen/sp18" />

                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_7d012169" />
    -->
                <TextView
                    android:id="@+id/tv_menu_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_accomodation"
                    android:drawablePadding="@dimen/dp10"
                    android:fontFamily="@font/segoeuib"
                    android:padding="@dimen/sp15"
                    android:text="@string/_help"
                    android:textColor="@color/color_012169"
                    android:textSize="@dimen/sp18" />

                <!-- <View
                     android:layout_width="match_parent"
                     android:layout_height="0.5dp"
                     android:background="@color/color_7d012169" />
     -->
                <TextView
                    android:id="@+id/tv_menu_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:drawableLeft="@drawable/ic_logout"
                    android:drawablePadding="@dimen/dp12"
                    android:fontFamily="@font/segoeuib"
                    android:padding="@dimen/sp15"
                    android:text="@string/_logout"
                    android:textColor="@color/color_012169"
                    android:textSize="@dimen/sp18" />
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</layout>