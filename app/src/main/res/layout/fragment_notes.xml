<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.CoinsFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_checkKnowledge"
            android:layout_below="@+id/toolbar"
            android:padding="@dimen/dp12">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_checkKnowledge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/sp15"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginRight="@dimen/sp15"
            android:background="@drawable/blue_bg_layout"
            android:fontFamily="@font/segoeuib"
            android:gravity="center"
            android:padding="@dimen/sp15"
            android:text="@string/_doYouWantToTest"
            android:textColor="@color/white_color"
            android:textSize="@dimen/sp18" />

    </RelativeLayout>

</layout>